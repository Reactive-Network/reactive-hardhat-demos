{
  "compilerOptions": {
    "target": "ES2020",                  // Modern JS output
    "module": "commonjs",                // Required by Hardhat runtime
    "strict": true,                      // Enable all strict type checks
    "esModuleInterop": true,             // Allow default imports from CommonJS
    "moduleResolution": "node",          // Node-style module resolution
    "resolveJsonModule": true,           // Allow importing JSON files
    "outDir": "dist",                     // Compiled files output
    "types": ["node", "hardhat"],         // Add Hardhat's own types for autocomplete
    "forceConsistentCasingInFileNames": true, // Avoid case-sensitivity issues
    "skipLibCheck": true                  // Speeds up compilation
  },
  "include": [
    "hardhat.config.ts",
    "scripts",
    "test",
    "ignition/modules"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
